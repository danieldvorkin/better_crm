.container-fluid.h-custom
  .row.d-flex.justify-content-center.align-items-center.h-100
    .col-md-9.col-lg-6.col-xl-5
      %img.img-fluid{:alt => "Sample image", :src => "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"}/
    .col-md-8.col-lg-6.col-xl-4.offset-xl-1
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        / Email input
        .form-outline.mb-4
          = f.label :email, class: 'form-label'
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg', placeholder: 'Enter an email address'
        / Password input
        .form-outline.mb-3
          = f.label :password, class: 'form-label'
          = f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg', placeholder: 'Enter Password'
        .form-outline.mb-3
          = f.label :password_confirmation, class: 'form-label'
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg', placeholder: 'Enter Password Confirmation'
        .d-flex.justify-content-between.align-items-center
          / Checkbox
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me
        .text-center.text-lg-start.mt-4.pt-2
          = f.submit "Sign up", style: "padding-left: 2.5rem; padding-right: 2.5rem;", class: 'btn btn-primary btn-lg'
          %p.small.fw-bold.mt-2.pt-1.mb-0
            = render "devise/shared/links"
