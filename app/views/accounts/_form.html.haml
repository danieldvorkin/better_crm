= form_with(model: account, local: true) do |form|
  - if account.errors.any?
    #error_explanation
      %h2
        = pluralize(account.errors.count, "error")
        prohibited this account from being saved:
      %ul
        - account.errors.full_messages.each do |message|
          %li= message
  .field-group
    = form.label :user_id, class: 'form-label'
    = form.select :user_id, options_from_collection_for_select(User.all, "id", "email"), {}, class: 'form-control'
  .field-group
    = form.label :name, class: 'form-label'
    = form.text_field :name, class: 'form-control'
  .field-group
    = form.label :active, class: 'form-label'
    = form.check_box :active
  .actions
    = form.submit "Save", class: 'btn btn-primary'
    = link_to 'Back', accounts_path, class: 'btn btn-secondary'
