= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |message|
          %li= message

  .row
    .field-group.col-6
      = f.label :address1, class: 'form-label'
      = f.text_field :address1, class: 'form-control'
    .field-group.col-6
      = f.label :address2, class: 'form-label'
      = f.text_field :address2, class: 'form-control'
    .field-group.col-3
      = f.label :city, class: 'form-label'
      = f.text_field :city, class: 'form-control'
    .field-group.col-3
      = f.label :state_province, class: 'form-label'
      = f.text_field :state_province, class: 'form-control'
    .field-group.col-3
      = f.label :country, class: 'form-label'
      = f.text_field :country, class: 'form-control'
    .field-group.col-3
      = f.label :postal, class: 'form-label'
      = f.text_field :postal, class: 'form-control'
    .field-group.col-3
      = f.label :phone, class: 'form-label'
      = f.text_field :phone, class: 'form-control'
    .field-group.col-6
      = f.label :customer_id, class: 'form-label'
      = f.select :customer_id, options_from_collection_for_select(Customer.all, "id", "name"), {}, class: 'form-control'
    .field-group.col-12
      = f.label :default, class: 'form-label'
      = f.check_box :default
    .field-group.col-12
      = f.label :active, class: 'form-label'
      = f.check_box :active
  .actions
    = f.submit 'Save'
